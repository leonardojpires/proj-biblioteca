extends layout/fe_master

block content
  if leitores.length
    br
    h2.mb-4.text-primary Lista de Leitores
    div.text-end
      a.btn.btn-sm.btn-primary.btn-lg(data-bs-toggle="modal", data-bs-target="#modalNovoLeitor") + Novo Leitor
    table.table.table-striped.table-hover
      thead.table-dark
        tr
          th Nome
          th Email
          th.text-end Ações
      tbody
        each leitor in leitores
          tr
            td= leitor.nome
            td= leitor.email
            td
                div.text-end
                    a.btn.btn-sm.btn-warning.me-2(
                    href="#",
                    data-bs-toggle="modal",
                    data-bs-target="#modalNovoLeitor",
                    data-id=leitor.id,
                    data-nome=leitor.nome,
                    data-email=leitor.email
                    ) Editar
                    button.btn.btn-sm.btn-danger(
                    type="button",
                    onclick=`apagarLeitor('${leitor.id}')`
                    ) Excluir
              

  else
    div.text-center.mt-5
      p.text-muted Nenhum leitor cadastrado ainda.
