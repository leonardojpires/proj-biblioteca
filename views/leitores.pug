extends layout/fe_master

block content
  .d-flex.justify-content-between.align-items-center
    h2.mb-0.text-primary Lista de Leitores
    a.btn.btn-primary.btn-lg(
      data-bs-toggle="modal",
      data-bs-target="#modalNovoLeitor"
    ) + Novo Leitor

  if leitores.length
    br
    table.table.table-striped.table-hover.mt-3
      thead.table-dark
        tr
          th Nome
          th Email
          th.text-end Ações
      tbody
        each leitor in leitores
          tr
            td= leitor.nome
            td= leitor.email
            td.text-end
              a.btn.btn-warning.btn-sm.me-2(
                href="#",
                data-bs-toggle="modal",
                data-bs-target="#modalNovoLeitor",
                data-id=leitor.id,
                data-nome=leitor.nome,
                data-email=leitor.email
              ) Editar
              button.btn.btn-danger.btn-sm(
                type="button",
                onclick=`apagarLeitor('${leitor.id}')`
              ) Excluir
  else
    .text-center.mt-5
      p.text-muted Nenhum leitor cadastrado ainda.
